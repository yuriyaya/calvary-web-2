{% extends 'layout.twig' %}

{% block content %}
<form class="form-signin" action="/calvary-web-2/logincheck" method="post">
    <img class="mb-4" src="src/img/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">로그인 하세요</h1>
    <label for="userID" class="sr-only">아이디</label>
    <input type="text" id="userID" class="form-control" name="userID" placeholder="아이디" required autofocus>
    <label for="userPassword" class="sr-only">비밀번호</label> 
    <input type="password" id="userPassword" class="form-control" name="userPassword" placeholder="비밀번호" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">로그인</button>
    <p class="mt-5 mb-3 text-muted">Yuls&copy; 2020</p>
</form>
{% endblock %}
